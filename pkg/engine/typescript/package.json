{
  "name": "@pipeforge/engine",
  "version": "0.2.2",
  "description": "Helper to run the Pipeline Engine binary from Node/Electron",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tsc --noEmit",
    "engine:download": "node ./scripts/ensure-binary.mjs",
    "postinstall": "node ./scripts/postinstall.mjs",
    "test": "node ./scripts/run-tests.mjs"
  },
  "files": [
    "bin",
    "dist",
    "scripts",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  }
}
